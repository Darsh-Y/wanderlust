<% layout("./layouts/boilerplate.ejs") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
      <div class="shadow-sm border rounded-4 p-4 mt-4">
        
        <h2 class="mb-4 text-center fw-bold">Edit Listing</h2>

        <form
          action="/listings/<%= listing._id %>?_method=PUT"
          method="post"
          enctype="multipart/form-data"
          class="needs-validation"
          novalidate
        >

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input
              type="text"
              name="listing[title]"
              value="<%= listing.title %>"
              class="form-control rounded-3"
              required
            />
            <div class="invalid-feedback">Please enter a title.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea
              name="listing[description]"
              id="description"
              class="form-control rounded-3"
              rows="3"
              required
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter a description.</div>
          </div>

          <!-- Original Image -->
          <div class="mb-3 text-center">
            <p class="mb-2 fw-semibold">Current Image:</p>
            <img 
              src="<%= newImageUrl %>" 
              alt="Listing Image" 
              class="img-fluid rounded-3 shadow-sm"
              style="max-height: 200px; object-fit: cover;"
            />
          </div>

          <!-- Upload New Image -->
          <div class="mb-3">
            <label for="image" class="form-label">Upload New Image:</label>
            <input 
              type="file" 
              name="listing[image][url]" 
              class="form-control rounded-3" 
              accept="image/*"
            />
          </div>

          <!-- Price & Country -->
          <div class="row">
            <div class="mb-3 col-12 col-sm-6">
              <label for="price" class="form-label">Price:</label>
              <input
                name="listing[price]"
                value="<%= listing.price %>"
                class="form-control rounded-3"
                required
              />
              <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <div class="mb-3 col-12 col-sm-6">
              <label for="country" class="form-label">Country:</label>
              <input
                type="text"
                name="listing[country]"
                value="<%= listing.country %>"
                class="form-control rounded-3"
                required
              />
              <div class="invalid-feedback">Please enter a valid country name.</div>
            </div>
          </div>

          <!-- Location -->
          <div class="mb-4">
            <label for="location" class="form-label">Location:</label>
            <input
              type="text"
              name="listing[location]"
              value="<%= listing.location %>"
              class="form-control rounded-3"
              required
            />
            <div class="invalid-feedback">Please enter a valid location.</div>
          </div>

          <!-- Submit -->
          <div class="d-grid">
            <button type="submit" class="btn btn-lg edit-btn">Update Listing</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
