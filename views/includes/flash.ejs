<% if(success && success.length){ %>
<div
  class="alert alert-success alert-dismissible fade show mt-3 col-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 text-break"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error && error.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show mt-3 col-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 text-break"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
