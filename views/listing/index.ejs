<% layout("./layouts/boilerplate.ejs") %>

  <!-- Category Filters (Desktop Only) -->
  <div id="filters" class="d-none d-lg-flex mb-4">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tent"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farm houses</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </div>

    <!-- Desktop Tax Toggle -->
    <div id="tax-toggle">
      <div class="form-check form-switch form-check-reverse">
        <input class="form-check-input" type="checkbox" id="switchCheckReverse" />
        <label class="form-check-label" for="switchCheckReverse">
          Display total after taxes
        </label>
      </div>
    </div>
  </div>

  <!-- Mobile Tax Toggle -->
  <div class="d-lg-none text-center mb-3">
    <div class="form-check form-switch d-inline-block">
      <input class="form-check-input" type="checkbox" id="switchCheckReverseMobile" />
      <label class="form-check-label" for="switchCheckReverseMobile">
        Display total after taxes
      </label>
    </div>
  </div>

  <div class="container my-5 listings-container">
    <% const chunkSize=10; const numChunks=Math.ceil(allListing.length / chunkSize); for (let i=0; i < numChunks; i++) {
      const chunk=allListing.slice(i * chunkSize, (i + 1) * chunkSize); %>
      <div class="listings-row mb-4">
        <% chunk.forEach(listing=> { %>
          <div class="listing-card-scroll">
            <a href="/listings/<%= listing._id %>" class="listing-link">
              <div class="card listing-card h-100">
                <img src="<%= listing.image.url %>" class="card-img-top square-img" alt="<%= listing.title %>" />
                <div class="card-body">
                  <h6 class="listing-title">
                    <%= listing.title %>
                  </h6>
                  <p class="listing-location">
                    <%= listing.location %>
                  </p>
                  <p class="listing-price">&#x20B9; <%= listing.price.toLocaleString("en-IN") %> for 2 nights <i
                        class="tax-info">&nbsp; +18% GST</i></p>
                </div>
              </div>
            </a>
          </div>
          <% }); %>
      </div>
      <% } %>
  </div>